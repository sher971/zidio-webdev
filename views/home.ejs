      <div class="card">
        <a href="/resume-maker/1">
          <img class="card-img-top" src="img/111.jpg" alt="Theme 1">
          <div class="card-overlay">
            <h5>Theme 1</h5>
          </div>
        </a>
      </div>
    </div>
    <div class="col-md-6" data-aos="zoom-in">
      <div class="card">
        <a href="/resume-maker/2">
          <img class="card-img-top" src="img/rrr.jpg" alt="Theme 2">
          <div class="card-overlay">
            <h5>Theme 2</h5>
